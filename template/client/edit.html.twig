{% extends "base.html.twig" %}
{% block title %}
Editer Nouveau Client 
{% endblock %}

{% block content %}
    <div class="container">
        <h1>Formulaires Modification  client</h1>
        <form action="{{env.base_path}}/clients/edit/{{client.id}}" method="POST">
            <div class="form-group">
                <div class="col"><div>Nom de famille</div>
                    <input id="formLastname" name="lastname" type="text" class="form-control" placeholder="Lastname" value="{{client.lastname}}">
                </div>
                <br>
                <div class="col"><div>Prénom</div>
                    <input id="formFirstname" name= "firstname" type="text" class="form-control" placeholder="Firstname" value="{{client.firstname}}">
                </div>
                <br>
                <div class="col"><div>Date d'entrée</div>
                    <input id="formEntry_Date" name= "entry_date" type="date" class="form-control" placeholder="Entry Date" value="{{client.entry_date}}">
                </div>
                <br>
                <div class="col"><div>Date de départ</div>
                    <input id="formDepartureDate" name= "departure_date" type="date" class="form-control" placeholder="Departure Date" value="{{client.departure_date}}">
                </div>
                <br>
                <input class="btn-primary" type="submit" value="Enregistrer">
            </div>
        </form>
    </div>
    {% endblock  %}